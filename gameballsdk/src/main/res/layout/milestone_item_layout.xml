<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:background="@drawable/bg_white_st_grey_r8"
    android:layout_marginTop="12dp"
    >
    
    <ImageView
        android:id="@+id/milestone_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_flag_black"
        />

    <TextView
        android:id="@+id/milestone_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/milestone_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        tools:text="Place 5 things"
        android:textSize="14sp"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/mileStone_reward_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/milestone_description"
        app:layout_constraintEnd_toEndOf="@id/milestone_description"
        app:layout_constraintTop_toBottomOf="@id/milestone_description"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_gift"
        android:drawableLeft="@drawable/ic_gift"
        android:drawablePadding="5dp"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        tools:text="30 Frubies | 30 Points"
        android:textStyle="bold"
        />

    <ProgressBar
        android:id="@+id/milestone_action_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/mileStone_reward_text"
        app:layout_constraintStart_toStartOf="@id/mileStone_reward_text"
        app:layout_constraintEnd_toStartOf="@id/milestone_amount_progress"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:progress="0"
        tools:progress="50"
        android:progressDrawable="@drawable/level_progress_drawable"
        android:elevation="1dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/milestone_amount_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"

        app:layout_constraintTop_toBottomOf="@id/mileStone_reward_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/milestone_action_progress"
        android:layout_marginTop="8dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:progress="0"
        tools:progress="50"
        android:progressDrawable="@drawable/level_progress_drawable"
        android:elevation="1dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <TextView
        android:id="@+id/target_amount_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/milestone_amount_progress"
        app:layout_constraintEnd_toEndOf="@id/milestone_amount_progress"
        android:layout_marginTop="5dp"
        tools:text="10"
        android:textSize="12sp"
        android:textColor="#4a4a4a"
        android:textStyle="bold"
        tools:visibility="visible"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/target_action_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/milestone_action_progress"
        app:layout_constraintEnd_toEndOf="@id/milestone_action_progress"
        android:layout_marginTop="5dp"
        tools:text="10"
        android:textSize="12sp"
        android:textColor="#4a4a4a"
        android:textStyle="bold"
        tools:visibility="visible"
        android:visibility="gone"
        />


</android.support.constraint.ConstraintLayout>